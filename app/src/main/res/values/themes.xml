<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TipCalculatorF21" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0f0</item>
        <item name="colorPrimaryVariant">#00b500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00f</item>
        <item name="colorSecondaryVariant">#0056c4</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/myTextViewStyle</item>
       <!-- <item name="materialButtonStyle">@style/myButtonStyle</item> -->
    </style>

    <style name="myTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="myTextViewStyle.myLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="myButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="rippleColor">@android:color/holo_red_dark</item>
    </style>
</resources>